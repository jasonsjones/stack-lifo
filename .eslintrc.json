{
    "extends": "eslint:recommended",
    "env": {
        "node": true,
        "mocha": true
    },
    "rules": {
        "semi": "warn",
        "curly": "warn",
        "eqeqeq": "error",
        "keyword-spacing": "warn",
        "max-len": [
            "warn",
            {
                "code": 100,
                "ignoreTrailingComments": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true
            }
        ],
        "no-multi-spaces": "warn",
        "no-trailing-spaces": "warn",
        "indent": "warn",
        "no-tabs": "error",
        "no-console": "warn"
    }
}
